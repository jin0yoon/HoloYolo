<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:visibility="visible"
    tools:context="com.example.user.holoyolo.BucketListAuthActivity2"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#B59892">

            <Button
                android:id="@+id/authbtnimage"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="사진파일"
                android:textSize="17dp"
                android:textColor="#B59892"
                android:background="@drawable/button_mypage_1"/>
            <Button
                android:id="@+id/authbtnsave"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="저장하기"
                android:textSize="17dp"
                android:textColor="#B59892"
                android:background="@drawable/button_mypage_1"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/boardwritelinear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/boardwritelinear1"
            android:layout_margin="20dp"
            android:gravity="center_vertical|center">

            <TextView
                android:id="@+id/seeunsee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="230dp"
                android:text="공개"
                android:textColor="#000000"
                android:textSize="20dp" />

            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="20dp"
                android:checked="true"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textOff="비공개"
                android:textOn="공개"
                android:textSize="16dp"
                android:textStyle="bold"
                android:typeface="monospace" />

        </LinearLayout>


        <EditText
            android:id="@+id/authbucketlist2editTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#6A5ACD"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/authimageview"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="0dp"/>

        <EditText
            android:id="@+id/authbucketlist2editTextContents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#6A5ACD"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"

            android:textSize="25dp"></EditText>
        <RelativeLayout
            android:id="@+id/boardwritelinear3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bucketlisteditTextContents">

            <TextView
                android:id="@+id/switchcheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/seemcheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/authnickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/boardwritelinear3"
            android:textColor="#000000" />
    </LinearLayout>

</ScrollView>