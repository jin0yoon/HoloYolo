<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.user.holoyolo.BoardWritingActivity1"
    android:background="#fff">

    <LinearLayout
        android:id="@+id/boardwritelinear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#B59892">

        <Button
            android:id="@+id/popupbtn1"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="카테고리"
            android:textSize="17dp"
            android:textColor="#B59892"
            android:background="@drawable/button_mypage_1"/>
        <Button
            android:id="@+id/btnnext"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:text="다음 페이지"
            android:textSize="17dp"
            android:textColor="#B59892"
            android:background="@drawable/button_mypage_1"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/boardwritelinear2"
        android:layout_below="@+id/boardwritelinear1"
        android:layout_margin="10dp"
        android:gravity="center">

        <TextView
            android:id="@+id/seeunsee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230dp"
            android:text="공개"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp"
            android:checked="true"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textOff="비공개"
            android:textOn="공개"
            android:textSize="16dp"
            android:textStyle="bold"
            android:typeface="monospace" />

    </LinearLayout>

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="#FA3"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/boardwritelinear2"
        android:hint="글의 제목을 입력해주세요."
        android:textSize="20dp"
        android:textColor="#000000"/>


    <EditText
        android:id="@+id/editTextContents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="내용을 입력해주세요."
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/editTextName"
        android:textColorHint="#FA3"
        android:textColor="#000000"
        android:textSize="20dp"/>

    <RelativeLayout
        android:id="@+id/boardwritelinear3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextContents">
        <TextView
            android:id="@+id/editmemu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/switchcheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/seemcheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/boardwritelinear3"
        android:textColor="#000000"/>

</RelativeLayout>